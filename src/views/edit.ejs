<% include partials/_header %>

<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" name="nombre" value="<%= data.nombre %>">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="direccion" value="<%= data.direccion %>">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="telefono" value="<%= data.telefono %>">
                            </div>
                            <button class="btn btn-primary btn-block" type="submit">Modificar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/_footer %>